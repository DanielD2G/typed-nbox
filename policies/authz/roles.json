{
  "roles": {
    "anonymous": {
      "description": "Public access only",
      "permissions": ["public:health"]
    },

    "viewer": {
      "description": "Read-only access to non-production resources",
      "permissions": [
        "templates:read:non_production",
        "templates:read",
        "entries:read:key:non_production",
        "entries:read:prefix:non_production",
        "tracking:read"
      ]
    },

    "viewer_prod": {
      "description": "Read-only access including production",
      "permissions": [
        "entries:read:key",
        "entries:read:prefix",
        "entries:read:export"
      ]
    },

    "editor": {
      "description": "Can read and write entries and templates",
      "permissions": [
        "templates:write",
        "templates:read:build",
        "templates:read:vars",
        "entries:write",
        "entries:read:key",
        "entries:read:prefix"
      ]
    },

    "secrets_reader": {
      "description": "Can read plain secret values",
      "permissions": ["secrets:read:value"]
    },

    "maintainer": {
      "description": "Can delete entries",
      "permissions": ["entries:delete"]
    },

    "cicd": {
      "description": "CI/CD automation access",
      "permissions": [
        "templates:read",
        "templates:read:build",
        "entries:read:key",
        "entries:read:prefix"
      ]
    },

    "admin": {
      "description": "Full system access",
      "permissions": ["admin:full_access"]
    }
  }
}